<% if ['status', 'wall_post'].include? event.kind %>
  <div class="event_content">
    <h5><%= simple_format(event.body) %></h5>
  </div>
<% end %>
      
<span class="action_bar">
  <span class="actions">
    <% if event.likers.include?(current_user) %>
      <%= link_to_unlike_button(event) %>
    <% else %>
      <%= link_to_like_button(event) %>
    <% end %>
          
    <%= link_to 'Comment', "#", onclick: "show_comment_box(#{event.id}); return false;" %>
    <%= link_to 'Share', '#' %>
  </span>
  <span class="event-time">
    <%= timeago event.created_at %>
  </span>
</span>
      
<div class="event_comments">
  <%= content_tag :ul, class: 'comments_list', id: "action_bar_of_#{event.id}" do %>
    <% if event.likes.count != 0 %>
      <%= render 'events/likes_bar', event: event %>
    <% end %>
          
    <% if event.comments.count > 4 %>
      <%= content_tag :li, class: 'comment_wrapper', id: "show_more_comments_id_#{event.id}" do %>
        <i class="icon-comments-alt"></i>
        <%= link_to_more_comments(event, 0, 1) %>
        <%= content_tag :span, "4 of #{event.comments.count}", class: "pull-right", id: "comments_of_id_#{event.id}_count" %>
      <% end %>
    <% end %>
  <% end %>
          
  <%= content_tag :ul, class: 'comments_list', id: "comments-of-#{event.id}" do %>
    <% event.comments.last(4).each do |comment| %>
      <%= render 'events/comment', comment: comment %>
    <% end %>     
  <% end %>
        
  <%= content_tag :ul, class: 'comments_list', id: "comment-box-#{event.id}" do %>
    <%= render 'events/comment_box', event: event %>
  <% end %>
</div>