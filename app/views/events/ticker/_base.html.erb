<% if ['status', 'wall_post'].include? event.kind %>
  <div class="ticker_event_content">
    <h5><%= simple_format(event.body) %></h5>
  </div>
<% end %>
      
<span class="ticker_action_bar">
  <span class="ticker_actions">
    <% if event.likers.include?(current_user) %>
      <%= link_to_unlike_button(event) %>
    <% else %>
      <%= link_to_like_button(event, 'ticker') %>
    <% end %>
          
    <%= link_to 'Comment', "#", onclick: "show_comment_box(#{event.id}, 'ticker'); return false;" %>
    <%= link_to 'Share', '#' %>
  </span>
  <span class="ticker_event-time">
    <%= timeago event.created_at %>
  </span>
</span>