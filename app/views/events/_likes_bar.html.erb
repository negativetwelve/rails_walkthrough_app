<%= content_tag :li, class: "comment_wrapper likes_bar_id_#{event.id}" do %>
  <%= content_tag :span do %>
      <i class="icon-thumbs-up"></i>
      <%= link_to pluralize(event.likes.count, 'person likes this.', 'people like this.'),
                            {controller: 'events', action: 'likers', event_id: event.id},
                            {remote: true,
                            class: "link_to_likes comment_like_id_#{event.id}"}
      %>
  <% end %>
<% end %>