<%= link_to image_tag(event.user.profile_picture, size: '50x50'), event.user, class: 'user-picture' %>
<div class="user-event-inner">
  <div class="event-inner-wrapper">
    <div class="main-event-content">
      <h5><%= link_to event.user.name, event.user, class: 'event-user-name' %></h5>
      <% if event.kind == 'status' %>
        <div class="event-content">
          <h5><%= simple_format(event.body) %></h5>
        </div>
      <% end %>
      <span class="action-bar">
        <span class="actions">
          <% if event.likers.include?(current_user) %>
            <%= link_to_unlike_button(event) %>
          <% else %>
            <%= link_to_like_button(event) %>
          <% end %>
          
          <%= link_to 'Comment', '#' %>
          <%= link_to 'Share', '#' %>
        </span>
        <span class="event-time">
          <%= timeago event.created_at %>
        </span>
      </span>
      <div class="event-comments">
        <%= content_tag :ul, class: 'comments-list', id: "action_bar_of_#{event.id}" do %>
          <% if event.likes.count != 0 %>
            <%= render 'events/likes_bar', event: event %>
          <% end %>
          
          <% if event.comments.count > 4 %>
            <%= content_tag :li, class: 'comment-wrapper', id: "show_more_comments_id_#{event.id}" do %>
              <%= link_to_more_comments(event, 0, 1) %>
              <%= content_tag :span, "4 of #{event.comments.count}", class: "pull-right", id: "comments_of_id_#{event.id}_count" %>
            <% end %>
          <% end %>
        <% end %>
          
        <%= content_tag :ul, class: 'comments-list', id: "comments-of-#{event.id}" do %>
          <% event.comments.last(4).each do |comment| %>
            <%= render 'events/comment', comment: comment %>
          <% end %>     
        <% end %>
        
        <%= content_tag :ul, class: 'comments-list', id: "comment-box-#{event.id}" do %>
          <%= content_tag :li, class: 'comment-wrapper' do %>
            <%= image_tag current_user.profile_picture, size: '32x32', class: 'comment-profile-picture' %>
            <%= form_for Event.new, remote: true, html: {class: 'new_comment_form', id: "new_comment_form_#{event.id}"} do |f| %>
              <%= f.text_area :body, placeholder: "Write a comment...", class: 'comment-input', data: {id: "#{event.id}"} %>
              <%= hidden_field_tag :kind, 'comment' %>
              <%= hidden_field_tag :parent_event_id, event.id %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
